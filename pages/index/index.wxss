/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.swiper-tab {
  width: 100%;
  border-bottom: 4rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
  font-size: 24px;
}

.on {
  color: #dd2727;
  border-bottom: 5rpx solid #dd2727;
}

.swiper-tab-list {
  font-size: 40rpx;
  display: inline-block;
  width: 49.5%;
  color: #333;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  margin:0%;
  
  align-items: center;
}


.kf_button{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 130rpx;
  right: 0;
  bottom: 20rpx;
  position: fixed;
}

.kf_text{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 30rpx;
  right: 60rpx;
  bottom: 15rpx;
  position: fixed;
  font-size: 30rpx;
  color: darkgray;
}

.note_button{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 130rpx;
  left:30rpx;
  bottom: 20rpx;
  position: fixed;
}
.ad_button{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 130rpx;
  left:200rpx;
  width: 200rpx;
  max-width:200rpx;
  bottom: 20rpx;
  position: fixed;
}
.note_text{
  background-color: rgba(255, 255, 255, 0);
  border: 0px;
  height: 35rpx;
  left: 25rpx;
  bottom: 15rpx;
  position: fixed;
  font-size: 30rpx;
  color: darkgray;
}

.kf_button::after{
  border: 0px;
}
.kf_image{
  z-index: 9999;
  width: 100rpx;
   height: 100rpx;
}